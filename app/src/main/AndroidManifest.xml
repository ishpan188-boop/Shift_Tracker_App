<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android.roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinalShiftTrackerApp">

        <!-- TIMER SERVICE -->
        <service
            android:name=".home.TimerService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="specialUse" />

        <!-- LOGIN ACTIVITY - LAUNCHES FIRST -->
        <activity
            android:name=".signup.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.App.Starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- SIGNUP ACTIVITY -->
        <activity
            android:name=".signup.SignUpActivity"
            android:exported="false" />

        <!-- MAIN ACTIVITY (Home, History, Salary, Profile tabs) -->
        <activity
            android:name=".main.MainActivity"
            android:exported="false" />

        <!-- Broadcast Receiver for checking weekly hour limits -->
        <receiver
            android:name=".broadcast.HourLimitCheckReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.example.finalshifttrackerapp.action.CHECK_HOUR_LIMIT" />
            </intent-filter>
        </receiver>

    </application>

</manifest>